
procedure f0(int n) returns (int j) {
  int i;

  i = 1; j = 0;
  if (n < 1)
    n = 1;

  while (i <= n) {
    j = j + 2;
    i = i + 1;
  }
}

procedure f1(int n) returns (int j) {
  int i;

  i = 1; j = 2;
  if (n < 1)
    n = 1;
    
  while (i < n) {
    j = j + 2;
    i = i + 1;
  }
}

requires $L(n) == $R(n);
ensures $L(j) == $R(j);